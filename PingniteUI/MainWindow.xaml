<Window x:Class="PingniteUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingniteUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="550"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True" >

    <Border Background="#202020" CornerRadius="15">

        <Grid>

            <Image Source="/Assets/Images/Logo.png" Margin="10,6,454,438"/>
            <Button Cursor="Hand" x:Name="Github" Margin="101,10,417,438" Background="Transparent" Click="Button_Click" Panel.ZIndex="1" Opacity="0.01" BorderThickness="0,0,0,0">
                <Button.Foreground>
                    <SolidColorBrush Color="Black" Opacity="0"/>
                </Button.Foreground>
                <Button.BorderBrush>
                    <SolidColorBrush Color="#FF707070" Opacity="100"/>
                </Button.BorderBrush>
            </Button>

            <Image Source="/Assets/Images/git.png" Height="32" Width="32" Margin="101,6,417,442" IsEnabled="False"></Image>

            <Button Cursor="Hand" Click="Button_Click_1" Width="30" Height="30" RenderTransformOrigin="0.333,0.8" Margin="510,9,10,441" Opacity="0.01" Panel.ZIndex="1">
                <Button.Background>
                    <SolidColorBrush Color="#FF202020" Opacity="0.01"/>
                </Button.Background>

            </Button>
            <Image Source="/Assets/Images/exit.png" Width="30" Height="30" Margin="510,10,10,440"></Image>
            <Border Width="200" Height="120" CornerRadius="10" Margin="15,48,335,312">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFF003A"/>
                        <GradientStop Color="#FFFF0075" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <Image Source="/Assets/Images/banner1.png"></Image>
                
                
            </Border>

            <Border Background="#33FFFFFF" Width="500" Height="1" Margin="15,180,35,288"></Border>
            
            <Image Source="/Assets/Images/Servers.png" Width="100" Height="45" Margin="10,192,440,244"></Image>
            <Label x:Name="Version" Foreground="Gray" Content="v0.1.0" Margin="0,449,507,0" RenderTransformOrigin="0.151,1.806"/>
        </Grid>

    </Border>

</Window>
